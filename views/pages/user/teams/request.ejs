<!DOCTYPE html>
<html>
<head>
	<% include ../../../partials/header.ejs %>
	<script>
		$(document).ready(function() {
			$('#example').DataTable({
				"iDisplayLength": 50
			});
		} );
	</script>

</head>
<body>
	<% include ../../../partials/nav.ejs %>
<div class="container">
	<div class="row">
		<div class="col-md-3">
		</div>
		<div class="col-md-6">
			<div class="page-header text-center">
				<h1>All Teams</h1>
			</div>
		</div>
		<div class="col-md-3">
		</div>
	</div>
	<div class="row">
	</div>
	
	<div class="row">
		<div class="col-md-1">
		</div>
		<div class="col-md-10">
			<div class="page-header text-center">
				<table id="example" class="table table-striped table-bordered" style="width:100%">
				<thead>
						<tr>
								<th>ID</th>
								<th>Name</th>
								<th>Abbreviation</th>
								<th>Conference</th>
								<th>Action</th>
						</tr>
				</thead>
				<tbody>
					<% teams.forEach((team, index) => { %>
							<tr>
									<td><%= team.Team_ID %></td>
									<td><%= team.Abbreviation %></td>
									<td><%= team.Team_Name %></td>
									<td><%= team.Conference_Name %></td>
									<td><a href="/user/teams/request/<%= team.Team_ID %>" class="btn btn-primary" role="button">Request</a></td>
							</tr>
					<% }) %>
				</tbody>
				<tfoot>
						<tr>
								<th>ID</th>
								<th>Name</th>
								<th>Abbreviation</th>
						</tr>
				</tfoot>
		</table>
			</div>
			
		<div class="col-md-1">
		</div>
		</div>
	</div>
	
	
	
</div>
</body>
</html>
